@page
@model Exwhyzee.Contribution.Web.Areas.Dashboard.Pages.LoanPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD A NEW LOAN</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Loan.Date" class="control-label"></label>
                <input asp-for="Loan.Date" class="form-control" />
                <span asp-validation-for="Loan.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loan.Amount" class="control-label"></label>
                <input asp-for="Loan.Amount" class="form-control" />
                <span asp-validation-for="Loan.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loan.TransactionStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.Loan.TransactionStatus, new SelectList(Enum.GetValues(typeof(Exwhyzee.Contribution.Domain.Enums.TransactionStatus))), new { @class = "form-control", required="required" })
                        <span asp-validation-for="Loan.TransactionStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loan.ProfileId" class="control-label"></label>
                <select asp-for="Loan.ProfileId" class ="form-control" asp-items="ViewBag.ProfileId"></select>
            </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
