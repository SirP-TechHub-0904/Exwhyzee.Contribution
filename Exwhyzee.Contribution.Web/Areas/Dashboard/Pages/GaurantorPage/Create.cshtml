@page
@model Exwhyzee.Contribution.Web.Areas.Dashboard.Pages.GaurantorPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD A NEW GAURANTOR</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="GaurantorAccount.ProfileId" class="control-label">Account</label>
                        <select asp-for="GaurantorAccount.ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="GaurantorAccount.GaurantorId" class="control-label">Gaurantor</label>
                        <select asp-for="GaurantorAccount.GaurantorId" class="form-control" asp-items="ViewBag.GaurantorId"></select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="GaurantorAccount.Appoved" /> @Html.DisplayNameFor(model => model.GaurantorAccount.Appoved)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="GaurantorAccount.GaurantorSigned" /> Gaurantor Signed
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="GaurantorAccount.GurantorStatus" class="control-label">Gurantor Status</label>
                        @Html.DropDownListFor(model => model.GaurantorAccount.GurantorStatus, new SelectList(Enum.GetValues(typeof(Exwhyzee.Contribution.Domain.Enums.GurantorStatus))), new { @class = "form-control", required="required" })
                        <span asp-validation-for="GaurantorAccount.GurantorStatus" class="text-danger"></span>
                    </div>
                   @* <div class="form-group">
                        <label asp-for="GaurantorAccount.Date" class="control-label"></label>
                        <input asp-for="GaurantorAccount.Date" class="form-control" />
                        <span asp-validation-for="GaurantorAccount.Date" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
