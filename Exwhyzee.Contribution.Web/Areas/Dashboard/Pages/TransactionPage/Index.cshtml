@model Exwhyzee.Contribution.Web.Areas.Dashboard.Pages.TransactionPage.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">TRANSACTIONS</h3>
        @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin")){*@

        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New Transaction</a>
        @* } *@
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction[0].Amount)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Transaction[0].Profile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Transaction[0].TransactionStatus)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Transaction)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>

                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id">

                                    @Html.DisplayFor(modelItem => item.Profile.Fullname)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionStatus)
                            </td>
                            @*  @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {*@
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                            @*<a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>*@
                                            @*<a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>*@
                                        </div>
                                    </div>
                                </div>

                            </td>
                            @*}*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>