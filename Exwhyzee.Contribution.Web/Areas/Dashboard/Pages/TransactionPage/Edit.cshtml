@page
@model Exwhyzee.Contribution.Web.Areas.Dashboard.Pages.TransactionPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT TRANSACTIONS</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Transaction.Id" />
                <div class="form-group">
                    <label asp-for="Transaction.Date" class="control-label"></label>
                    <input asp-for="Transaction.Date" class="form-control" />
                    <span asp-validation-for="Transaction.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Transaction.Amount" class="control-label"></label>
                    <input asp-for="Transaction.Amount" class="form-control" />
                    <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Transaction.TransactionStatus" class="control-label">Status</label>
                    @Html.DropDownListFor(model => model.Transaction.TransactionStatus, new SelectList(Enum.GetValues(typeof(Exwhyzee.Contribution.Domain.Enums.TransactionStatus))), new { @class = "form-control", required="required" })
                    <span asp-validation-for="Transaction.TransactionStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Transaction.ProfileId" class="control-label"></label>
                    <select asp-for="Transaction.ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
                    <span asp-validation-for="Transaction.ProfileId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                </div>
            </form>
        </div>
    </div>


    <!-- /.row -->
</div>
<!-- /.card-body -->
<div class="card-footer">
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
